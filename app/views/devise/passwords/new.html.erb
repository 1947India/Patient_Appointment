<h2>Forgot your password?</h2>
<style>
  body{
    margin-top: 270px;
    margin-bottom:140px;
    margin-left: 950px;
    margin-right: 50px;
    background-color: lightblue;
  }
  .field
  {
    margin: 8px ;
    color:blue;
    font-weight: bold;
    border-radius: 25px;
    padding: 14px
    width:45%;
  }
  
</style>
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data: { turbo: false } }) do |f| %>
<body style="background-image:url(<%= asset_path 'final.jpg' %>); background-repeat: no-repeat;">

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions" %>
  </div>
<% end %>

